<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kahin.petinthehouse">

    <application
        android:name="com.kahin.petinthehouse.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_pets"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pets"
        android:supportsRtl="true"
        android:theme="@style/Theme.Home"
        tools:targetApi="31">
        <activity
            android:name="com.kahin.petinthehouse.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kahin.petinthehouse.sign.SignActivity"/>
    </application>

</manifest>